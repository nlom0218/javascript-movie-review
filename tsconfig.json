{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./src/@types/*.d.ts", "./src/@types/*.ts"],
  "exclude": ["node_modules"]
}
